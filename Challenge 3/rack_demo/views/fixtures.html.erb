  <body>
    <style media="screen">
      h1 {
        text-align: center;
        padding: 45px;
      }

      h2 {
        text-align: center;
        padding: 5px;
      }

      h3 {
        text-align: center;
        padding: 5px;

      }

      .logo {
        margin: 25px auto;
        width: 60%;
        height: 100px;
        border: 1px solid black;
      }
      .center {
        text-align: center;
        padding: 6px;
      }

      .title {
          margin: 25px auto;
          text-align: center;
          font-size: 25px;
      }
      .hr-block {
        border-bottom: 1px solid black;
      }
    </style>

    <div class="container">

      <div class='row'>
        <div class="col-sm-4">
           <div class='logo'>
             <div class="title">Logo</div>
           </div>
        </div>
        <div class="col-sm-8">
            <h1>Fixture Report</h1>
        </div>
      </div>

      <% @office.each_with_index do |(key, value), index| %>
        <div class='row'>
          <div class="col-4 hr-block">
            <h2><%= key %></h2>
          </div>
          <div class="col-7 hr-block"></div>

          <div class="col-1 hr-block">
            <h3><%= @total_count[index][0]["count"] %></h3>
          </div>

          <!-- line beetwen row one and two -->

          <div class="w-100 d-none d-md-block"></div>

          <% value.each do |key, val| %>
            <div class="col-2">
            </div>
            <div class="col-2">
              <div class="center"><%= key["title"]%></div>
            </div>
            <div class="col-1">
              <div class="center"><%= key["type"]%></div>
            </div>
            <div class="col-4">
              <div class="center"><%= key["address"]%></div>
            </div>
            <div class="col-2">
              <div class="center"><%= key["lob"]%></div>
            </div>
            <div class="col-1">
              <div class="center"><%= val %></div>
            </div>
          <% end %>

        </div>
        <br>

      <% end %>











